{
  "profiles": {
    "strict": {
      "similarityThreshold": 0.95,
      "weights": {
        "title": 0.4,
        "body": 0.4,
        "labels": 0.1,
        "metadata": 0.1
      },
      "autoClose": false,
      "requireManualReview": true,
      "closeMessage": "This issue has been identified as a high-confidence duplicate of #{primary}. Closing to consolidate discussion.",
      "duplicateLabel": "duplicate",
      "excludeLabels": ["wontfix", "invalid", "discussion", "question"],
      "maxDaysOld": 30
    },
    "moderate": {
      "similarityThreshold": 0.85,
      "weights": {
        "title": 0.35,
        "body": 0.35,
        "labels": 0.15,
        "metadata": 0.15
      },
      "autoClose": false,
      "requireManualReview": true,
      "closeMessage": "This issue appears to be a duplicate of #{primary}. Please review and close if confirmed.",
      "duplicateLabel": "possible-duplicate",
      "excludeLabels": ["wontfix", "invalid"],
      "maxDaysOld": 60
    },
    "relaxed": {
      "similarityThreshold": 0.75,
      "weights": {
        "title": 0.3,
        "body": 0.3,
        "labels": 0.2,
        "metadata": 0.2
      },
      "autoClose": false,
      "requireManualReview": true,
      "closeMessage": "This issue may be related to #{primary}. Please review for potential duplication.",
      "duplicateLabel": "needs-review",
      "excludeLabels": ["wontfix"],
      "maxDaysOld": 90
    },
    "aggressive": {
      "similarityThreshold": 0.8,
      "weights": {
        "title": 0.4,
        "body": 0.3,
        "labels": 0.15,
        "metadata": 0.15
      },
      "autoClose": true,
      "requireManualReview": false,
      "closeMessage": "This issue has been automatically closed as a duplicate of #{primary}. If you believe this is incorrect, please reopen and provide additional context.",
      "duplicateLabel": "duplicate",
      "excludeLabels": ["wontfix", "invalid", "critical", "security"],
      "maxDaysOld": 45,
      "notifyOnClose": true
    }
  },
  "repositorySettings": {
    "default": {
      "profile": "moderate",
      "batchSize": 100,
      "scheduleEnabled": false,
      "scheduleInterval": "daily",
      "webhookEnabled": false
    },
    "overrides": {
      "high-traffic": {
        "profile": "strict",
        "batchSize": 50,
        "maxDaysOld": 14
      },
      "community": {
        "profile": "relaxed",
        "requireManualReview": true
      },
      "internal": {
        "profile": "aggressive",
        "autoClose": true
      }
    }
  },
  "algorithms": {
    "similarity": {
      "algorithm": "combined",
      "minTokenLength": 2,
      "removeStopWords": true,
      "stemming": true,
      "ngramSize": 2
    },
    "preprocessing": {
      "removeCodeBlocks": true,
      "removeUrls": true,
      "removeHtmlTags": true,
      "normalizeWhitespace": true
    }
  },
  "reporting": {
    "formats": ["markdown", "json", "html"],
    "includeSimilarityDetails": true,
    "includeTimestamps": true,
    "groupByLabels": false
  },
  "notifications": {
    "slack": {
      "enabled": false,
      "webhook": "",
      "channel": "#github-notifications"
    },
    "email": {
      "enabled": false,
      "recipients": []
    },
    "github": {
      "enabled": true,
      "mentionReviewers": true,
      "createIssue": false
    }
  }
}