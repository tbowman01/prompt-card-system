# Development Environment Variables for Docker Compose

# Backend Configuration
NODE_ENV=development
PORT=3001
DEBUG=prompt-card:*

# Database
DATABASE_PATH=/app/data/database.sqlite
DATABASE_URL=sqlite:/app/data/database.sqlite

# LLM Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama2:7b-chat
OLLAMA_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_TTL=3600

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001
CHOKIDAR_USEPOLLING=true

# Analytics & Performance
ENABLE_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
METRICS_EXPORT_INTERVAL=60000

# Development Tools
ENABLE_DEBUG_LOGS=true
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true

# Testing Configuration
TEST_PARALLEL_LIMIT=5
TEST_TIMEOUT=30000
JEST_TIMEOUT=60000

# Security (Development Only)
JWT_SECRET=dev-secret-key-change-in-production
SESSION_SECRET=dev-session-secret-change-in-production
BCRYPT_ROUNDS=10

# Monitoring (Optional)
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# Model Management
AUTO_PULL_MODELS=true
MODEL_CACHE_SIZE=10GB
MODELS_TO_PRELOAD=llama2:7b-chat,phi3:mini,codellama:7b