# Prompt Card System - Environment Configuration Template
# Copy this file to .env and configure values for your deployment

# === ENVIRONMENT ===
NODE_ENV=production
LOG_LEVEL=info

# === SERVICE IMAGES (GitHub Container Registry) ===
BACKEND_IMAGE=ghcr.io/tbowman01/prompt-card-system-backend:latest
FRONTEND_IMAGE=ghcr.io/tbowman01/prompt-card-system-frontend:latest
AUTH_IMAGE=ghcr.io/tbowman01/prompt-card-system-auth:latest
OLLAMA_IMAGE=ghcr.io/tbowman01/prompt-card-system-ollama:latest

# === SERVICE PORTS ===
FRONTEND_PORT=3000
BACKEND_PORT=3001
AUTH_PORT=8005
OLLAMA_PORT=11434
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# === API CONFIGURATION ===
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_AUTH_URL=http://localhost:8005

# === DATABASE CONFIGURATION ===
DATABASE_URL=sqlite:./data/database.sqlite
AUTH_DATABASE_URL=sqlite:./data/auth.sqlite

# For PostgreSQL (production alternative):
# DATABASE_URL=postgresql://user:password@postgres:5432/promptcard
# POSTGRES_DB=promptcard
# POSTGRES_USER=promptcard_user
# POSTGRES_PASSWORD=your-secure-password

# === REDIS CACHE ===
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password-change-in-production

# === SECURITY SECRETS ===
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-change-in-production-min-32-chars
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-change-in-production

# === LLM CONFIGURATION ===
OLLAMA_HOST=http://ollama:11434
OLLAMA_ORIGINS=*
OLLAMA_NUM_PARALLEL=2
OLLAMA_MEMORY_LIMIT=8G
DOWNLOAD_ADDITIONAL_MODELS=true

# === CORS & API SECURITY ===
CORS_ORIGIN=http://localhost:3000
API_RATE_LIMIT=1000

# === MONITORING CONFIGURATION ===
MONITORING_ENABLED=true
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password
GRAFANA_SECRET_KEY=your-grafana-secret-key-32-chars
GRAFANA_ROOT_URL=http://localhost:3000/grafana

# === PRODUCTION URLS (for deployment) ===
# Uncomment and modify for production deployment
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com
# NEXT_PUBLIC_AUTH_URL=https://auth.yourdomain.com
# CORS_ORIGIN=https://yourdomain.com
# GRAFANA_ROOT_URL=https://yourdomain.com/grafana

# === SSL CONFIGURATION (for NGINX) ===
# SSL_CERT_PATH=./nginx/ssl/cert.pem
# SSL_KEY_PATH=./nginx/ssl/key.pem

# === BACKUP CONFIGURATION ===
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# === DEVELOPMENT OVERRIDES ===
# Uncomment for development
# NODE_ENV=development
# LOG_LEVEL=debug
# NEXT_PUBLIC_API_URL=http://localhost:3001
# DATABASE_URL=sqlite:./data/dev-database.sqlite