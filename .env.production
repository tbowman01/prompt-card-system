# Production Environment Configuration
# Prompt Card System Production Environment

# ======================
# APPLICATION SETTINGS
# ======================
NODE_ENV=production
PORT=3001
API_RATE_LIMIT=1000

# ======================
# DOMAIN & SSL SETTINGS
# ======================
DOMAIN=promptcard.ai
API_DOMAIN=api.promptcard.ai
MONITORING_DOMAIN=monitoring.promptcard.ai
CORS_ORIGIN=https://promptcard.ai,https://www.promptcard.ai

# ======================
# DATABASE CONFIGURATION
# ======================
# PostgreSQL Production Database
POSTGRES_DB=promptcard_prod
POSTGRES_USER=promptcard_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_123!@#
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# ======================
# REDIS CONFIGURATION
# ======================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_456!@#
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# ======================
# SECURITY SETTINGS
# ======================
# JWT Secret (Generate with: openssl rand -base64 64)
JWT_SECRET=CHANGE_ME_JWT_SECRET_VERY_LONG_RANDOM_STRING_789!@#

# API Keys for External Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ======================
# MONITORING & LOGGING
# ======================
# Grafana Admin Password
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD_ABC!@#
GRAFANA_SECRET_KEY=CHANGE_ME_GRAFANA_SECRET_DEF!@#

# Log Level (error, warn, info, debug)
LOG_LEVEL=info
MONITORING_ENABLED=true

# ======================
# BACKUP CONFIGURATION
# ======================
# Backup Schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ======================
# SSL/TLS CONFIGURATION
# ======================
# SSL Certificate paths (if using custom certs)
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# ======================
# SCALING CONFIGURATION
# ======================
# Resource limits
MAX_CONNECTIONS=200
REDIS_MAX_MEMORY=1gb
OLLAMA_NUM_PARALLEL=4

# ======================
# FEATURE FLAGS
# ======================
ENABLE_VOICE_INTERFACE=true
ENABLE_BLOCKCHAIN_AUDIT=true
ENABLE_COLLABORATION=true
ENABLE_MULTI_TENANT=true
ENABLE_ADVANCED_MONITORING=true

# ======================
# EXTERNAL INTEGRATIONS
# ======================
# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Slack Webhooks (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ======================
# MAINTENANCE SETTINGS
# ======================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System maintenance in progress. Please try again later."

# ======================
# DEVELOPMENT OVERRIDES
# ======================
# Set to 'true' to enable debug features in production (NOT RECOMMENDED)
DEBUG_MODE=false
ENABLE_SWAGGER_UI=false