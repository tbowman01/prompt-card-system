name: Ultra Minimal CI - Emergency Fix

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]

jobs:
  emergency-status-check:
    name: Emergency Status Check
    runs-on: ubuntu-latest
    timeout-minutes: 3
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Check project structure
        run: |
          echo "=== PROJECT STRUCTURE CHECK ==="
          ls -la
          echo "=== BACKEND EXISTS ==="
          ls -la backend/ | head -5
          echo "=== FRONTEND EXISTS ==="
          ls -la frontend/ | head -5
          echo "=== PACKAGE FILES EXIST ==="
          ls -la backend/package.json frontend/package.json
          
      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Emergency CI Status
        run: |
          echo "âœ… ULTRA MINIMAL CI PASSED!"
          echo "Repository structure is valid"
          echo "Node.js 20 setup successful"
          echo "Ready for next phase of emergency fixes"