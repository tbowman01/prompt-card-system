{
  "name": "vllm-auth-service",
  "version": "1.0.0",
  "description": "Zero-trust authentication service for vLLM swarm",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "test:security": "jest tests/security --coverage --watchAll=false",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t vllm-auth-service .",
    "docker:run": "docker run -p 8005:8005 vllm-auth-service"
  },
  "dependencies": {
    "fastify": "^4.25.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/redis": "^6.1.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/cookie": "^9.2.0",
    "bcryptjs": "^2.4.3",
    "nanoid": "^5.0.4",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "zod": "^3.22.4",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.10.9",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.3",
    "typescript": "^5.3.3",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}