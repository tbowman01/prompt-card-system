# Security Configuration Template
# Copy this to .env and update with your production values

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-at-least-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-must-be-at-least-32-characters
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com,https://app.yourdomain.com

# Redis Configuration (for distributed rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# API Keys (comma-separated list for API key authentication)
API_KEYS=your-api-key-1,your-api-key-2,your-api-key-3

# Security Features
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true

# Content Security Policy
CSP_REPORT_URI=https://yourdomain.com/api/security/csp-report

# Environment
NODE_ENV=production

# Database (if using external database for users)
DATABASE_URL=your-database-url

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-in-production

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
API_RATE_LIMIT_MAX=50

# Security Headers
HSTS_MAX_AGE=31536000
REFERRER_POLICY=no-referrer

# File Upload Security
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/json,text/plain,text/csv,application/pdf

# IP Whitelist for Admin Endpoints (comma-separated)
ADMIN_IP_WHITELIST=127.0.0.1,::1,your-admin-ip

# Monitoring and Alerting
SECURITY_WEBHOOK_URL=https://your-monitoring-service.com/webhook
ENABLE_SECURITY_ALERTS=true

# Production Security Flags
FORCE_HTTPS=true
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict