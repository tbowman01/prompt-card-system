{
  "name": "prompt-card-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    
    "test": "jest --passWithNoTests --coverage --watchAll=false",
    "test:unit": "jest --selectProjects unit --passWithNoTests",
    "test:integration": "jest --selectProjects integration --testTimeout=45000",
    "test:accessibility": "jest --selectProjects accessibility --testTimeout=60000",
    "test:performance": "jest --selectProjects performance --testTimeout=30000",
    "test:watch": "jest --watch --selectProjects unit",
    "test:coverage": "jest --coverage --watchAll=false --coverageReporters=text --coverageReporters=html",
    "test:coverage:ci": "jest --config=jest.config.ci.js --coverage --watchAll=false",
    
    "test:ci": "jest --config=jest.config.ci.js --coverage --watchAll=false --verbose",
    "test:ci:unit": "jest --config=jest.config.ci.js --selectProjects unit --coverage",
    "test:ci:integration": "jest --config=jest.config.ci.js --selectProjects integration",
    "test:ci:accessibility": "jest --config=jest.config.ci.js --selectProjects accessibility",
    "test:ci:performance": "jest --config=jest.config.ci.js --selectProjects performance",
    
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ci": "playwright test --reporter=html --reporter=junit",
    "test:visual": "playwright test src/__tests__/visual --config=playwright.config.visual.ts",
    
    "test:all": "npm run test:ci && npm run test:e2e:ci",
    "test:quick": "jest --selectProjects unit --passWithNoTests --verbose=false",
    "test:debug": "jest --selectProjects unit --runInBand --verbose --no-cache",
    
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    
    "test:report": "node scripts/generate-test-report.js",
    "test:analyze": "jest --coverage --coverageReporters=text-summary && node scripts/analyze-test-results.js"
  },
  "dependencies": {
    "@types/d3": "^7.4.3",
    "chart.js": "^4.5.0",
    "d3": "^7.9.0",
    "lucide-react": "^0.525.0",
    "next": "14.2.30",
    "react": "18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "18.3.1",
    "react-grid-layout": "^1.5.2",
    "react-resizable": "^3.0.5",
    "recharts": "^3.1.0",
    "socket.io-client": "^4.7.2",
    "swr": "^2.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "20.14.2",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "10.4.21",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.30",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "jsdom": "^25.0.0",
    "msw": "^2.10.4",
    "postcss": "8.5.6",
    "tailwindcss": "3.4.4",
    "typescript": "5.4.5"
  }
}
