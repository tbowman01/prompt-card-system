{
  "name": "prompt-card-system",
  "version": "1.0.0",
  "description": "A comprehensive prompt card management system with intelligent categorization and testing capabilities",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "test": "npm run lint && npm run test:backend && npm run test:frontend",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "type-check": "npm run type-check:backend && npm run type-check:frontend",
    "type-check:backend": "cd backend && npm run typecheck",
    "type-check:frontend": "cd frontend && npm run typecheck",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules backend/dist frontend/.next",
    "docker:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:setup-buildx": "./scripts/docker-buildx-setup.sh",
    "docker:build:modern": "DOCKER_BUILDKIT=1 docker buildx build --platform linux/amd64,linux/arm64",
    "docker:build:cache": "docker buildx build --cache-from type=gha --cache-to type=gha,mode=max",
    "docker:build:multi": "docker buildx build --platform linux/amd64,linux/arm64 --push"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tbowman01/prompt-card-system.git"
  },
  "keywords": [
    "prompt",
    "ai",
    "management",
    "testing",
    "cards"
  ],
  "author": "tbowman01",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}